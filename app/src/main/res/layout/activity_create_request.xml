<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30sp"
    android:layout_marginTop="30sp"
    android:layout_marginRight="30sp"
    android:orientation="vertical"
    tools:context=".CreateRequestActivity">

    <Spinner
        android:id="@+id/spinnerTypeCreateRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:hint="@string/type" />

    <Spinner
        android:id="@+id/spinnerPaymentCreateRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:hint="Payment" />

    <EditText
        android:id="@+id/editTextMunicipalityCreateRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:hint="Municipality"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextAddressCreateRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:hint="@string/address"
        android:inputType="text" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:stretchColumns="1">

        <TableRow>

            <Button
                android:id="@+id/buttonFromCreateRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="date from" />

            <TextView
                android:id="@+id/textViewFromCreateRequest"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="01.01.2019." />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/buttonToCreateRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="date to" />

            <TextView
                android:id="@+id/textViewToCreateRequest"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="01.01.2019." />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/editTextPriceCreateRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:hint="Price"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editTextDetailsCreateRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:hint="Details"
        android:inputType="text" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:onClick="createRequest"
        android:text="Create" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".RequestActivity">


    <TextView
        android:id="@+id/textViewTypeRequestDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:paddingVertical="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Plumbing"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewWorkerFirstNameRequestDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/textViewTypeRequestDetails"
        android:text="Aleksandar"
        android:textColor="#000000"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textViewWorkerLastNameRequestDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewWorkerFirstNameRequestDetails"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/textViewTypeRequestDetails"
        android:text="Maksimovic"
        android:textColor="#000000"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/labelFromRequestDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTypeRequestDetails"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="From: "
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/labelToRequestDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelFromRequestDetails"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="To: "
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/textViewFromRequestDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTypeRequestDetails"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/labelFromRequestDetails"
        android:text="15/11/2018"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/textViewToRequestDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewFromRequestDetails"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/labelToRequestDetails"
        android:text="15/11/2018"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/labelPriceRequestDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelToRequestDetails"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Price: "
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/textViewPriceRequestDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewToRequestDetails"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/labelStatusRequestDetails"
        android:text="5000 RSD"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/labelStatusRequestDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelPriceRequestDetails"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Status: "
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/textViewStatusRequestDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPriceRequestDetails"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/labelStatusRequestDetails"
        android:text="Successful"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/labelDetailsRequestDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelStatusRequestDetails"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Details: "
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/textViewDetailsRequestDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewStatusRequestDetails"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/labelDetailsRequestDetails"
        android:text="Curabitur sodales viverra volutpat. Ut vitae pretium ante."
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    <Button
        android:id="@+id/buttonCancelRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDetailsRequestDetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Cancel Request"
        android:onClick="requestCancel"
        android:visibility="gone"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewReviewRequestDetails"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/textViewDetailsRequestDetails"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="20dp"
        android:onClick="reviewRequest"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/labelReviewRequestDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Review"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textViewReviewRequestDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/labelReviewRequestDetails"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam mattis nec arcu sit amet condimentum."
                android:textColor="#000000" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:stretchColumns="1">

                <TableRow>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="shareRequest"
                        android:text="Share" />

                    <RatingBar
                        android:id="@+id/ratingBarRequestDetails"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:numStars="5"
                        android:stepSize="0.1" />

                </TableRow>
            </TableLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>